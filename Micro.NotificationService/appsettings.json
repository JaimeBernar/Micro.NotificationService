{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    },
    "Console": {
      "IncludeScopes": true
    }
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "File",
        "Args": {
          "path": "Logs/log-.txt",
          "rollingInterval": "Day",
          "rollOnFileSizeLimit": true
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ]
  },
  "AllowedHosts": "*",
  "EmailServer": {
    "Host": "localhost",
    "Port": 1025,
    "UseSenderInfo": true,
    "EmailSenderName": "NotificationService",
    "EmailSenderAddress": "notification@service.com"
  },
  "Settings": {
    "EmailNotificationsActive": true,
    "WebNotificationsActive": true,
    "BatchSize": 100,
    "BatchTime": 30,
    "NotificationsHubPath": "/notifications",
    "DatatabasePathAndName" : "../../Database.db" 
  }
}
